<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewRead"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:onClick="onClickRead"
        app:srcCompat="@drawable/read" />

    <ImageView
        android:id="@+id/imageViewDownloads"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:onClick="onClickDownload"
        app:srcCompat="@drawable/get_book" />

    <ImageView
        android:id="@+id/imageViewContribute"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="62dp"
        android:clickable="true"
        android:onClick="onClickContribute"
        app:srcCompat="@drawable/contribute" />

    <TextView
        android:id="@+id/textViewread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/lemonfont"
        android:text="Your Saved Notes"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/lemonfont"
        android:text="Get From Library"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewContribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="@font/lemonfont"
        android:text="Upload Notes For Others"
        android:textColor="#000000"
        android:textSize="24sp" />
</RelativeLayout>